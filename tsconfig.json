{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@config/*": ["src/config/*"],
      "@users/*": ["src/users/*"],
      "@auth/*":["src/auth/*"],
      "@type/*": ["src/types/*"],
      "@utils/*":["src/utils/*"],
      "@middlewares/*":["src/middlewares/*"]
    }
  }
}
